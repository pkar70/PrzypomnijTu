<Page
    x:Class="PrzypomnijTu.Settingsy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PrzypomnijTu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="Page_Loaded">

    <StackPanel Margin="5,5,5,5">
        <TextBlock HorizontalAlignment="Center" Text="Settings" Margin="0,0,0,10" FontSize="20" />
        <Slider Name="uiDayStart" Header="Notify starts hour" HorizontalAlignment="Stretch" Minimum="0" Maximum="23" Value="8"/>
        <Slider Name="uiDayStop" Header="Notify stops hour" HorizontalAlignment="Stretch" Minimum="0" Maximum="23" Value="21"/>
        <Button HorizontalAlignment="Center" Content="Save!" Margin="0,20,0,0" Click="uiSave_Click"/>
    </StackPanel>
    <Page.BottomAppBar>
            <CommandBar ClosedDisplayMode="Minimal" >
                <AppBarButton Icon="Clear" Label="Clear" Click="uiClear_Click" />
            </CommandBar>
        </Page.BottomAppBar>

</Page>
